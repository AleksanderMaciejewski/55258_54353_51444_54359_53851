@{
    ViewData["Title"] = "Home Page";
}

    <!-- magazyn -->
    <div id="warehouse" class="page">
        <div class="table-container">
            <h2>Warehouse</h2>
            <table id="warehouseBooksTable">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                        <th>Ilość</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- wiersze z ksiazkami tutaj -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        let warehouseBooks = [
            { title: "Book 1", author: "Author 1", number: 100 },
            { title: "Book 2", author: "Author 2", number: 50 },
        ];

    function renderWarehouseBooksTable() {
        const tbody = document.querySelector("#warehouseBooksTable tbody");
        tbody.innerHTML = "";
        warehouseBooks.forEach((book) => {
            const row = document.createElement("tr");
            row.innerHTML = `
                        <td>${book.title}</td>
                        <td>${book.author}</td>
                        <td>${book.number}</td>
                    `;
            tbody.appendChild(row);
        });
    }

    renderWarehouseBooksTable();

</script>


